<h1>Rooms#show</h1>
<h1><%= @room.name %></h1>

<div id="messages">
  <%= render @messages %>
</div>

<%= form_with model: [@room, @message], data: { action: "submit->chat#submit" } do |form| %>
  <p>
    <%= form.text_field :content, data: { target: "chat.input" } %>
    <%= form.submit "Send" %>
  </p>
<% end %>
